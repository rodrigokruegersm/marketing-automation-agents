# =============================================
# MARKETING AUTOMATION AGENTS - ENV CONFIG
# =============================================
# Copie este arquivo para .env e preencha os valores

# ---------------------------------------------
# SLACK (Alertas e Comunicação)
# ---------------------------------------------
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_TEAM_ID=T00000000
SLACK_CHANNEL_ALERTS=#alerts
SLACK_CHANNEL_REPORTS=#reports
SLACK_CHANNEL_SALES=#sales

# ---------------------------------------------
# DATABASE (PostgreSQL)
# ---------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/agency_db

# ---------------------------------------------
# CRM (Escolher um: HubSpot, Pipedrive, ou Close)
# ---------------------------------------------
# HubSpot
HUBSPOT_API_KEY=
HUBSPOT_PORTAL_ID=

# Pipedrive
PIPEDRIVE_API_TOKEN=
PIPEDRIVE_COMPANY_DOMAIN=

# Close CRM
CLOSE_API_KEY=

# ---------------------------------------------
# WHATSAPP BUSINESS API
# ---------------------------------------------
WHATSAPP_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_BUSINESS_ID=
WHATSAPP_VERIFY_TOKEN=

# ---------------------------------------------
# CALENDÁRIO (Escolher um)
# ---------------------------------------------
# Calendly
CALENDLY_TOKEN=
CALENDLY_USER_URI=

# Cal.com
CALCOM_API_KEY=

# Google Calendar
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# ---------------------------------------------
# META ADS (Facebook/Instagram)
# ---------------------------------------------
META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=act_000000000
META_APP_ID=
META_APP_SECRET=

# ---------------------------------------------
# GOOGLE ADS
# ---------------------------------------------
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# ---------------------------------------------
# GOOGLE SHEETS / DRIVE
# ---------------------------------------------
GOOGLE_CREDENTIALS_PATH=./credentials/google-credentials.json
SPREADSHEET_MASTER_ID=
SPREADSHEET_REPORTS_ID=

# ---------------------------------------------
# GITHUB (Versionamento de Copies)
# ---------------------------------------------
GITHUB_TOKEN=ghp_xxxxxxxxxxxx
GITHUB_REPO=owner/repo

# ---------------------------------------------
# OPENAI (Backup/Comparação)
# ---------------------------------------------
OPENAI_API_KEY=sk-xxxxxxxxxxxx

# ---------------------------------------------
# AMBIENTE
# ---------------------------------------------
NODE_ENV=development
LOG_LEVEL=info
TIMEZONE=America/Sao_Paulo

# ---------------------------------------------
# AGENTES - CONFIGURAÇÕES
# ---------------------------------------------
# Tempo máximo de espera para resposta (ms)
AGENT_TIMEOUT=30000

# Modo de teste (não envia mensagens reais)
TEST_MODE=true

# Cliente piloto para testes
PILOT_CLIENT_ID=CLI_001
